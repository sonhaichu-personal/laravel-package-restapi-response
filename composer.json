{
    "name": "sonhaichu/laravel-package-restapi-response",
    "description": "RESTful Api response for laravel",
    "authors": [
        {
            "name": "sonhaichu",
            "email": "sonhaichu@gmail.com"
        }
    ],
    "autoload": {
        "classmap": [],
        "psr-4": {
            "HaiCS\\Laravel\\Api\\Response\\": "src/app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HaiCS\\Laravel\\Api\\Response\\Test\\": "tests/"
        }
    },
    "require": {
        "league/fractal": "^0.18.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "orchestra/testbench": "^4.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "HaiCS\\Laravel\\Api\\Response\\Providers\\ApiResponseServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit --color=always"
        ],
        "coverage": [
            "vendor/bin/phpunit --coverage-html coverages"
        ]
    }
}
